<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.nedelingg.design.BrokerMainActivity$PlaceholderFragment" >

    <Button
        android:id="@+id/gameInfoButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gameOptionsButton"
        android:layout_below="@+id/gameOptionsButton"
        android:layout_marginTop="15dp"
        android:onClick="showInfo"
        android:text="@string/info" />

    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/title"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="35sp" />

    <Button
        android:id="@+id/newGameButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="startGame"
        android:text="@string/new_game" />

    <Button
        android:id="@+id/gameOptionsButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newGameButton"
        android:layout_below="@+id/newGameButton"
        android:layout_marginTop="15dp"
        android:onClick="showOptions"
        android:text="@string/options" />

</RelativeLayout>
