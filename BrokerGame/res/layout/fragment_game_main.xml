<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nedelingg.design.GameMainActivity$PlaceholderFragment" >

    <ImageView
        android:id="@+id/card01"
        android:layout_width="40dp"
        android:layout_height="53dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:maxHeight="70dp"
        android:maxWidth="50dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:src="@drawable/a100"
        android:contentDescription="@string/cardOne" />

    <ImageView
        android:id="@+id/card02"
        android:layout_width="40dp"
        android:layout_height="53dp"
        android:layout_alignTop="@+id/card01"
        android:layout_marginTop="18dp"
        android:src="@drawable/a50"
        android:contentDescription="@string/cardTwo" />

    <ImageView
        android:id="@+id/card03"
        android:layout_width="40dp"
        android:layout_height="53dp"
        android:layout_alignLeft="@+id/card01"
        android:layout_alignTop="@+id/card02"
        android:layout_marginTop="16dp"
        android:src="@drawable/c2div"
        android:contentDescription="@string/cardTree" />

    <ImageView
        android:id="@+id/card04"
        android:layout_width="40dp"
        android:layout_height="53dp"
        android:layout_alignLeft="@+id/card02"
        android:layout_below="@+id/card01"
        android:src="@drawable/c2div"
        android:contentDescription="@string/cardFour" />

    <ImageView
        android:id="@+id/card05"
        android:layout_width="40dp"
        android:layout_height="53dp"
        android:layout_alignLeft="@+id/card02"
        android:layout_below="@+id/card02"
        android:src="@drawable/c2div" 
        android:contentDescription="@string/cardFive" />

    <ImageView
        android:id="@+id/card06"
        android:layout_width="40dp"
        android:layout_height="53dp"
        android:layout_alignLeft="@+id/card09"
        android:layout_below="@+id/card03"
        android:src="@drawable/c2div"
        android:contentDescription="@string/cardSix" />

    <ImageView
        android:id="@+id/card07"
        android:layout_width="40dp"
        android:layout_height="53dp"
        android:layout_alignLeft="@+id/card09"
        android:layout_below="@+id/card04"
        android:src="@drawable/b2div"
        android:contentDescription="@string/cardSeven" />

    <ImageView
        android:id="@+id/card08"
        android:layout_width="40dp"
        android:layout_height="53dp"
        android:layout_alignLeft="@+id/card06"
        android:layout_below="@+id/card05"
        android:src="@drawable/b2div"
        android:contentDescription="@string/cardEight" />

    <ImageView
        android:id="@+id/card09"
        android:layout_width="40dp"
        android:layout_height="53dp"
        android:layout_alignLeft="@+id/card05"
        android:layout_below="@+id/card06"
        android:src="@drawable/c2div"
        android:contentDescription="@string/cardNine" />

    <ImageView
        android:id="@+id/card10"
        android:layout_width="40dp"
        android:layout_height="53dp"
        android:layout_alignLeft="@+id/card06"
        android:layout_below="@+id/card06"
        android:src="@drawable/d60"
        android:contentDescription="@string/cardTen" />

    <ImageView
        android:id="@+id/boardImage"
        android:layout_width="310dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="18dp"
        android:src="@drawable/board"
        android:contentDescription="@string/board" />

    <TextView
        android:id="@+id/firstCompanyName"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/boardImage"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/boardImage"
        android:gravity="right|center_vertical" />

    <TextView
        android:id="@+id/secondCompanyName"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/firstCompanyName"
        android:layout_alignTop="@+id/card03"
        android:layout_marginTop="0dp"
        android:gravity="right|center_vertical" />

    <TextView
        android:id="@+id/thirdCompanyName"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/secondCompanyName"
        android:layout_below="@+id/secondCompanyName"
        android:gravity="right|center_vertical"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/fourthCompanyName"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_above="@+id/card08"
        android:layout_alignLeft="@+id/thirdCompanyName"
        android:gravity="right|center_vertical"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="12dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/boardImage"
        android:layout_alignTop="@+id/boardImage"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/marker" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="12dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@+id/imageView1"
        android:src="@drawable/marker" />

    <ImageView
        android:id="@+id/ImageView02"
        android:layout_width="12dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/ImageView01"
        android:layout_toRightOf="@+id/ImageView01"
        android:src="@drawable/marker" />

    <ImageView
        android:id="@+id/ImageView03"
        android:layout_width="12dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/ImageView02"
        android:layout_toRightOf="@+id/ImageView02"
        android:src="@drawable/marker" />

    <ImageView
        android:id="@+id/ImageView04"
        android:layout_width="12dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/ImageView03"
        android:layout_toRightOf="@+id/ImageView03"
        android:src="@drawable/marker" />

    <ImageView
        android:id="@+id/ImageView05"
        android:layout_width="12dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/ImageView04"
        android:layout_toRightOf="@+id/ImageView04"
        android:src="@drawable/marker" />

    <ImageView
        android:id="@+id/ImageView06"
        android:layout_width="12dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/ImageView05"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@+id/ImageView05"
        android:src="@drawable/marker" />

    <ImageView
        android:id="@+id/ImageView07"
        android:layout_width="12dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/ImageView06"
        android:layout_toRightOf="@+id/ImageView06"
        android:src="@drawable/marker" />

    <ImageView
        android:id="@+id/ImageView08"
        android:layout_width="12dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/ImageView07"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@+id/ImageView07"
        android:src="@drawable/marker" />

</RelativeLayout>