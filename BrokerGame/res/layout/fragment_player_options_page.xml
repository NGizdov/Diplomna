                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_row="0"
                    android:text="@string/player_two_label"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="100dp"
