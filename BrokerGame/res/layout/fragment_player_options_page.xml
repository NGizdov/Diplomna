<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:gravity="fill_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    tools:context="com.nedelingg.design.OptionActivity$PlayerOptions" >

    <ScrollView
        android:id="@+id/playersOptionsScroll"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/resetPlayersButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:id="@+id/playersOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:orientation="vertical" >

            <GridLayout
                android:id="@+id/PlayerOneOptionsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/players_border"
                android:columnCount="2"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:rowCount="3" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_row="0"
                    android:text="@string/player_one_label"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_row="1"
                    android:text="@string/player_name_label" />

                <EditText
                    android:id="@+id/playerOneName"
                    android:layout_width="200dp"
                    android:layout_gravity="left"
                    android:ems="10"
                    android:hint="@string/player_one_label"
                    android:inputType="textPersonName" >

                    <requestFocus />
                </EditText>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_row="2"
                    android:text="@string/player_type_label" />

                <Spinner
                    android:id="@+id/playerOneType"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_column="1"
                    android:layout_gravity="top"
                    android:layout_row="2" />
            </GridLayout>

            <GridLayout
                android:id="@+id/PlayerTwoOptionsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/players_border"
                android:columnCount="2"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:rowCount="3" >

                <TextView
                    android:layout_width="100dp"
